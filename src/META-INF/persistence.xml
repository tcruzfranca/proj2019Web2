<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="moodIdentifier" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!--  <class>modelo.Pessoa</class>  -->
		<exclude-unlisted-classes>false</exclude-unlisted-classes>

		<properties>
	<!-- <property name="hibernate.archive.autodetection" value="class, hbm"/> -->
	<!-- dados da conexao -->
	<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
	<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/projetoweb2?useTimezone=true&amp;serverTimezone=UTC" />
	<property name="javax.persistence.jdbc.user" value="root" />
	<property name="javax.persistence.jdbc.password" value="projetoweb" /><!-- gvc300396@ -->

	<!--  propriedades do hibernate -->
	<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
	<property name="hibernate.show_sql" value="true" />
	<property name="hibernate.format_sql" value="true" />
	
	<!--  atualiza o banco, gera as tabelas se for preciso -->
	<property name="hibernate.hbm2ddl.auto" value="update" /> <!-- validate, update, create, create-drop -->
    
   </properties>
</persistence-unit>



</persistence>
